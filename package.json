{
  "name": "kol-hatorah",
  "version": "1.0.0",
  "private": true,
  "description": "Hebrew RAG project monorepo",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run -ws --if-present dev",
    "lint": "npm run -ws lint",
    "ci": "npm ci && npm run build && npm run lint",
    "start": "npm --workspace packages/worker run"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "openai": "^6.16.0"
  }
}
